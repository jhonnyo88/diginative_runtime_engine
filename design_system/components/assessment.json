  "progress_summary": {
    "overall_progress": {
      "chakra_component": "Progress",
      "size": "lg",
      "color_scheme": "brand",
      "border_radius": "radii.full",
      "background": "gray.200"
    },
    
    "progress_details": {
      "chakra_component": "VStack",
      "spacing": "space.2",
      "align": "stretch"
    },
    
    "skill_breakdown": {
      "chakra_component": "VStack",
      "spacing": "space.3"
    },
    
    "skill_item": {
      "chakra_component": "HStack",
      "justify": "space-between",
      "align": "center"
    },
    
    "skill_name": {
      "chakra_component": "Text",
      "font_size": "fontSizes.sm",
      "font_weight": "fontWeights.medium",
      "color": "gray.700"
    },
    
    "skill_score": {
      "chakra_component": "Badge",
      "variant": "subtle",
      "font_size": "fontSizes.xs"
    }
  },
  
  "action_controls": {
    "primary_actions": {
      "download_certificate": {
        "chakra_component": "Button",
        "variant": "solid",
        "color_scheme": "brand",
        "size": "lg",
        "min_height": "56px",
        "left_icon": "DownloadIcon",
        "width": "100%"
      },
      
      "share_results": {
        "chakra_component": "Button", 
        "variant": "outline",
        "color_scheme": "brand",
        "size": "lg",
        "min_height": "56px",
        "left_icon": "ShareIcon",
        "width": "100%"
      }
    },
    
    "secondary_actions": {
      "retry_game": {
        "chakra_component": "Button",
        "variant": "ghost",
        "color_scheme": "gray",
        "size": "md",
        "left_icon": "RepeatIcon"
      },
      
      "view_feedback": {
        "chakra_component": "Button",
        "variant": "ghost", 
        "color_scheme": "gray",
        "size": "md",
        "left_icon": "InfoIcon"
      },
      
      "next_module": {
        "chakra_component": "Button",
        "variant": "solid",
        "color_scheme": "success",
        "size": "lg",
        "min_height": "56px",
        "right_icon": "ArrowForwardIcon",
        "width": "100%"
      }
    }
  },
  
  "animations": {
    "score_reveal": {
      "keyframes": {
        "0%": { "transform": "scale(0.5)", "opacity": 0 },
        "50%": { "transform": "scale(1.1)", "opacity": 0.8 },
        "100%": { "transform": "scale(1)", "opacity": 1 }
      },
      "animation": "scoreReveal 0.8s ease-out"
    },
    
    "achievement_unlock": {
      "keyframes": {
        "0%": { "transform": "scale(0) rotate(180deg)", "opacity": 0 },
        "50%": { "transform": "scale(1.2) rotate(0deg)", "opacity": 1 },
        "100%": { "transform": "scale(1) rotate(0deg)", "opacity": 1 }
      },
      "animation": "achievementUnlock 0.6s ease-out"
    },
    
    "progress_fill": {
      "transition": "width 1.2s ease-out",
      "delay": "0.3s"
    },
    
    "certificate_appear": {
      "chakra_component": "Fade",
      "in": true,
      "transition": {
        "enter": { "duration": 0.5, "delay": 0.8 }
      }
    }
  },
  
  "responsive_behavior": {
    "breakpoints": {
      "base": {
        "font_size": "md",
        "spacing": "space.4",
        "certificate_size": "compact"
      },
      "sm": {
        "font_size": "lg",
        "spacing": "space.6",
        "certificate_size": "full"
      }
    }
  },
  
  "accessibility": {
    "keyboard_navigation": {
      "tab_order": ["score_area", "achievements", "download_cert", "share", "next_module"],
      "focus_management": "Auto-focus on primary action after score animation"
    },
    
    "screen_reader": {
      "score_announcement": "aria-live='polite' - announces final score",
      "achievement_announcements": "aria-live='assertive' - for new achievements",
      "certificate_description": "Detailed alt text for compliance requirements"
    },
    
    "color_contrast": {
      "score_text": "7:1 ratio for critical information",
      "achievement_indicators": "Visual + text + icon for color blind users",
      "certificate_elements": "High contrast for official documents"
    }
  },
  
